@model MyCourier.Models.ViewModels.AgentCreateUserViewModel

@{
    var isEdit = Model.Id > 0;
    ViewData["Title"] = isEdit ? "Edit User" : "Create User";
    Layout = "~/Views/Shared/_LayoutAgent.cshtml";
}

<div class="container mt-5">
    <!-- Back to Dashboard -->
    <div class="d-flex justify-content-end mb-3">
        <a href="@Url.Action("Index", "Agent")" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form method="post" asp-controller="Agent" asp-action="@(isEdit ? "EditUser" : "CreateUser")" asp-route-id="@(isEdit ? Model.Id : null)">
                @Html.AntiForgeryToken()
                @if (isEdit)
                {
                    <input type="hidden" asp-for="Id" />
                }
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-2">
                        <input asp-for="Username" class="form-control" placeholder="Username" />
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-2">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-2">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <select asp-for="UserType" class="form-select">
                            <option value="user">User</option>
                        </select>
                        <span asp-validation-for="UserType" class="text-danger small"></span>
                    </div>
                    <div class="col-md-12 text-end">
                        <button type="submit" class="btn btn-@(isEdit ? "warning" : "success")">
                            <i class="bi @(isEdit ? "bi-pencil-square" : "bi-plus-circle")"></i> @(isEdit ? "Update User" : "Create User")
                        </button>
                        @if (isEdit)
                        {
                            <a href="@Url.Action("CreateUser", "Agent")" class="btn btn-secondary ms-2">Cancel</a>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Existing Users Table -->
    <div class="mt-5">
        <h4 class="mb-3">Existing Users</h4>
        @if (Model.ExistingUsers != null && Model.ExistingUsers.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Full Name</th>
                            <th>Username</th>
                            <th>Phone Number</th>
                            <th style="width: 230px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.ExistingUsers)
                        {
                            <tr>
                                <td>@user.FullName</td>
                                <td>@user.Username</td>
                                <td>@user.PhoneNumber</td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">
                                            Edit
                                        </a>
                                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Are you sure you want to delete this user?');">
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>No users found.</p>
        }
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
