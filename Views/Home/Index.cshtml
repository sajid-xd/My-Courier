@{
    ViewData["Title"] = "Home";
    var delivery = ViewBag.Delivery;
}

<div class="ftco-blocks-cover-1">
    <div class="ftco-cover-1 overlay" style="background-image: url('https://source.unsplash.com/pSyfecRCBQA/1920x780')">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1>Choose Your Quality Delivery of Your Cargo</h1>
                    <p class="mb-5">Handcrafted with love by the fine folks at <a href="https://free-template.co/" target="_blank">Free-Template.co</a></p>

                    <!-- Razor-based Tracking Form -->
                    <form asp-action="Track" method="post">
                        <div class="form-group d-flex">
                            <input type="text" class="form-control" name="tracking_id" placeholder="Enter your tracking number" required />
                            <button type="submit" class="btn btn-primary text-white px-4">Track Now</button>
                        </div>
                    </form>
                </div>

                @if (delivery != null)
                {
                    <div class="col-lg-6 mt-4 mt-lg-0">
                        <div class="card shadow-lg">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">📦 Delivery Details for Tracking ID: @delivery.TrackingId</h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-6 font-weight-bold">Sender Phone:</div>
                                    <div class="col-6">@delivery.SenderPhone</div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-6 font-weight-bold">Receiver:</div>
                                    <div class="col-6">@delivery.ReceiverName</div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-6 font-weight-bold">From Address:</div>
                                    <div class="col-6">@delivery.FromAddress</div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-6 font-weight-bold">To Address:</div>
                                    <div class="col-6">@delivery.ToAddress</div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-6 font-weight-bold">Service:</div>
                                    <div class="col-6">@delivery.ServiceName</div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-6 font-weight-bold">Weight:</div>
                                    <div class="col-6">@delivery.WeightName</div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-6 font-weight-bold">Current Location:</div>
                                    <div class="col-6">@delivery.LocationName</div>
                                </div>
                                <div class="row">
                                    <div class="col-6 font-weight-bold">Status:</div>
                                    <div class="col-6">
                                        <span class="badge badge-success">@delivery.Status</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- END .ftco-cover-1 -->
    <div class="ftco-service-image-1 pb-5">
        <div class="container">
            <div class="owl-carousel owl-all">
                <div class="service text-center">
